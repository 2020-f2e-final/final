<div x-data="level()">
    <div class="flex mt-6">
        <% data.levelTypes.forEach((type) =>{%>
        <div class="w-1/12 text-2xl text-white cursor-pointer hover:text-main-levelTitle-dark" @click="scrollTo('<%= type.typeName %>')"><%= type.typeName %></div>
        <% }) %> 
    </div>

    <% data.levelTypes.forEach((type, i) => { %>
        <div id="<%= type.typeName %>">
            <div class="mt-14">
                <div class="mb-7 relative left-2 text-5xl text-white sm:underline"><%= type.typeName %></div>
            </div>
            <br/>

            <div class="flex flex-wrap justify-center">
                <% type.level.forEach((level) =>{%>
                    <div class="w-full md:w-1/2 lg:w-2/5 xl:w-1/3 pl-16 mb-8">
                        <div class="flex flex-col items-end relative rounded-3xl bg-main-light-blue-grey w-72 h-36 mx-auto">
                            <p class="rounded-t-3xl bg-main-faded-blue w-full h-9 text-center pl- pl-20 text-3xl text-white"><%= level.name %></p>
                            
                            <p class="px-6 my-auto text-main-levelText text-4xl font-light"><%= level.text %></p>
                            
                            <div class="absolute top-0 -left-16 rounded-full bg-main-gloves-blue w-36 h-36 shadow-2xl" style="box-shadow: 2px 2px 6px 4px rgba(0, 0, 0, 0.479)">
                                <img class="mt-3 h-20 mx-8" src="images/<%= level.img %> " alt="">
                                <p class=" text-main-levelText text-3xl text-center"><%= level.imgLevel %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% }) %>
</div>
<script>
function level () {
    return {
        scrollTo (typeName) {
            window.scrollTo({
                top: document.querySelector('#' + typeName).offsetTop - 100,
                left: 0,
                behavior: 'smooth'
            })
        }
    }
}
</script>