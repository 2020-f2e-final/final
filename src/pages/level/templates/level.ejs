<div>
    <div class="flex mt-6">
        <% data.levelTypes.forEach((type) =>{%>
        <div class="sm:w-1/6 w-1/4 lg:text-3xl md:text-2xl text-xl text-white cursor-pointer hover:text-main-levelTitle-dark"><a href="level.html/#<%= type.id %>"><%= type.typeName %></a></div>
        <% }) %> 
    </div>

    <% data.levelTypes.forEach((type, i) => { %>
        <div id="<%= type.id %>">
            <div class="mt-14">
                <div class="mb-7 relative left-2 lg:text-5xl sm:text-4xl text-3xl text-white underline"><%= type.typeName %></div>
            </div>
            <br/>

            <div class="flex flex-wrap justify-center">
                <% type.level.forEach((level) =>{%>
                    <div class="w-full md:w-1/2 lg:w-2/5 xl:w-1/3 pl-16 mb-8">
                        <div class="flex flex-col items-end relative rounded-3xl bg-main-light-blue-grey lg:w-80 sm:w-72 w-4/5 sm:h-36 h-28 mx-auto">
                            <p class="rounded-t-3xl bg-main-faded-blue w-full h-9 text-center sm:pl-20 pl-10 sm:text-3xl text-2xl text-white"><%= level.name %></p>
                            
                            <p class="sm:px-6 sm:mx-0 mx-auto my-auto sm:pl-0 pl-10 text-main-levelText sm:text-4xl text-2xl font-light"><%= level.text %></p>
                            
                            <div class="absolute top-0 -left-16 rounded-full bg-main-gloves-blue sm:w-36 w-28 sm:h-36 h-28 shadow-2xl" style="box-shadow: 2px 2px 6px 4px rgba(0, 0, 0, 0.479)">
                                <img class="mt-3 sm:h-20 h-14 mx-8" src="images/<%= level.img %> " alt="">
                                <p class=" text-main-levelText sm:text-3xl text-2xl text-center"><%= level.imgLevel %></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    <% }) %>
</div>