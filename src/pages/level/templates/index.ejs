<div class="mx-auto w-11/12">
    <br/>
    <br/>
    <div x-data="{ tab: 'level' }" >
        <div class="flex w-full">
            <div class="relative w-1/2 font-medium cursor-pointer hover:text-main-levelTitle-light lg:text-6xl sm:text-5xl text-4xl" 
            :class="{'text-main-levelTitle-light': tab ==='level' ,'text-main-levelTitle-dark': tab !=='level', ' text-opacity-75': tab !=='level' }" 
                @click="tab = 'level'">等級</div>
            <div class="w-1/2 font-medium cursor-pointer hover:text-main-levelTitle-light lg:text-6xl sm:text-5xl text-4xl" 
                :class="{'text-main-levelTitle-light': tab ==='licence' ,'text-main-levelTitle-dark': tab !=='licence', ' text-opacity-75': tab !=='licence' ,}" 
                @click="tab = 'licence'">駕照</div>
        </div>

        <div x-show="tab === 'level'">
            <%- include('level') %>
        </div>
        <div x-show="tab === 'licence'">
            <%- include('licence') %>
        </div>
    </div>
</div>
