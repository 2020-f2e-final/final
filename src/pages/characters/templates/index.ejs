<h1>characters</h1>

<div x-data="{ tab: 'base' }">
    <div class="grid grid-cols-6 gap-4">
        <div class="col-start-2 col-span-1 flex items-end text-main-light-blue-grey
        text-6xl ">
            <button :class="{ 'active': tab === 'base' }" @click="tab = 'base'">
                基礎
            </button>
        </div>
        <div class="col-start-3 col-span-1 flex items-end text-main-light-blue-grey
        text-6xl text-opacity-25 hover:text-4xl hover:text-opacity-100">
            <button :class="{ 'active': tab === 'animal' }" @click="tab = 'animal'">
                動物
            </button>    
        </div>
    </div>

    <div x-show="tab === 'base'">
        <%- include('base') %> 
    </div>
    <div x-show="tab === 'animal'">Tab animal</div>
</div>