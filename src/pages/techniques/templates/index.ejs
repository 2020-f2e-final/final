<div class="mx-auto w-11/12">
    <div class="text-main-light-blue-grey text-7xl font-medium mt-8">賽車技巧</div>
    <div class="bg-main-light-blue-grey xl:h-56 lg:h-72 rounded-3xl -mt-1">
        <div class="flex flex-wrap justify-center py-3 h-full">
            <% data.tecTabTypes.forEach((type, i) => { %>
                <div class="xl:w-1/4 lg:w-1/3 pl-14 my-3 flex">
                    <div class="rounded-full w-3 h-3  my-auto bg-main-levelText"></div>
                    <div class="text-main-levelText text-4xl"><a href="techniques.html/#<%= type.tecId %>"><%= type.tecName %></a></div>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="flex flex-wrap justify-center">
        <% data.tecConTypes.forEach((type, i) => { %>
            <div id="<%= type.tecId %>" class="px-20 xl:w-1/2 h-96 my-20">
                <div class="w-full h-full bg-main-light-blue-grey">
                    <div class="flex border-b-4 border-main-levelText w-3/4 h-20 mx-auto">
                        <p class="w-1/2 text-main-levelText text-5xl font-medium h-full pt-6"><%= type.tecTitle %></p>
                        <div class="w-1/2">
                            <div class="h-20 pl-20 pt-8 pb-2">
                                <div class="bg-main-baseBackground w-full h-full" style="clip-path: polygon(44% 0, 100% 0%, 89% 100%, 33% 100%);">
                                    <p class="pl-11 text-white text-2xl "><%=type.tecLevel %> </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="text-main-levelText w-full px-20 text-2xl font-light text-center mt-5"><%= type.tecText%></div>
                    <div class="w-full px-14 mt-3 pt-8">
                        <img class="h-72" style ="box-shadow: 2px 2px 4px 4px rgba(0, 0, 0, 0.479)" src="images/<%= type.tecGif %> " alt="">
                    </div>
                </div>
            </div>
        <% }) %>
        <% data.tecConsTypes.forEach((type, i) => { %>
            <div id="<%= type.tecId %>" class="w-10/12 pl-16 pr-64 h-80 my-20 relative">
                <div class="w-full h-full bg-main-light-blue-grey" style="clip-path: polygon(0 0, 88% 0, 100% 100%, 0% 100%);">
                    <div class="flex border-b-4 border-main-levelText w-1/2 h-20 ml-12">
                        <p class="w-2/3 text-main-levelText text-5xl font-medium h-full pt-6"><%= type.tecTitle %></p>
                        <% if(type.tecLevel == "基礎"){ %>
                            <div class="w-1/3">
                                <div class="h-20 pl-7 pt-8 pb-3">
                                    <div class="bg-main-baseBackground w-full h-full" style="clip-path: polygon(44% 0, 100% 0%, 89% 100%, 33% 100%);">
                                        <p class="pl-10 text-white text-2xl"><%= type.tecLevel %> </p>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                        <% if(type.tecLevel == "進階"){ %>
                            <div class="w-1/3">
                                <div class="h-20 pl-7 pt-8 pb-3">
                                    <div class="bg-main-baseBackground1 w-full h-full" style="clip-path: polygon(44% 0, 100% 0%, 89% 100%, 33% 100%);">
                                        <p class="pl-10 text-white text-2xl"><%= type.tecLevel %> </p>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                        <% if(type.tecLevel == "高級"){ %>
                            <div class="w-1/3">
                                <div class="h-20 pl-7 pt-8 pb-3">
                                    <div class="bg-main-baseBackground2 w-full h-full" style="clip-path: polygon(44% 0, 100% 0%, 89% 100%, 33% 100%);">
                                        <p class="pl-10 text-white text-2xl"><%= type.tecLevel %> </p>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="text-main-levelText w-1/2 ml-12 text-2xl font-light mt-5 leading-9"><%= type.tecText%></div>
                </div>
                <div class="absolute right-10 top-0 w-1/2 my-7">
                    <img class=" h-64" style ="box-shadow: 2px 2px 4px 4px rgba(0, 0, 0, 0.479)" src="images/<%= type.tecGif %> " alt="">
                </div>
            </div>
        <% }) %>
    </div>
</div>