<div class="mt-40 mb-8 lg:hidden flex flex-col">
  <div class="pt-24 bg-main-light-blue-grey relative flex flex-col items-center w-full">
    <div class="pointer-events-none absolute -top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80">
      <img data-wow-offset="250" class="wow animate__bounceInRight w-full h-auto" src="images/<%= car.carImg %> " alt="">
    </div>
    <div class="p-4">
      <div class="text-center">
        <span class="mx-2 px-3 py-1 font-light text-lg text-white tracking-widest <%= car.rarity === 1 ? 'bg-main-pinky-purple' : 'bg-main-orange-yellow' %>"><%= ['史詩', '傳說'][car.rarity - 1] %></span>
        <% if (car.coating) { %>
          <span class="px-3 py-1 font-light text-lg text-white tracking-widest bg-main-greyish-brown">可塗裝</span>
        <% } %> 
      </div>
      <p data-wow-offset="200" class="wow animate__fadeIn mt-2 text-center text-main-title-blue text-3xl"><%= car.name %></p>
      <p data-wow-offset="200" class="wow animate__fadeIn text-indent w-full mt-3"><%= car.intro %></p>
    </div>
    <div class="flex items-center justify-center bg-main-greyish-brown w-full h-28 mt-auto overflow-hidden">
      <div class="flex items-end">
        <% [['drift', '飄移'], ['acceleration', '加速度'],['curve', '彎道'], ['accelerationTime', '加速<br>時間'], ['gasGatheringSpeed', '集氣<br>速度']].forEach(([key, text]) => { %>
        <div class="text-center w-16 px-2">
          <p data-wow-delay="0.5s" data-wow-offset="100" class="wow animate__fadeIn text-white font-thin"><%- text %></p>
          <div class="inline-block bg-white my-2 w-10 h-0.5"></div>
          <p data-wow-delay="0.5s" class="wow animate__fadeIn text-white font-thin"><%= car[key] %> </p>
        </div>
        <% }) %> 
      </div>
    </div>
  </div>
  <% if (car.features) { %>
    <ul class="mt-2 text-white font-thin">
      <% car.features.forEach((item) => { %> 
      <li><span class="pr-2 text-xs">◆</span><%= item %></li>
      <% }) %> 
    </ul>
  <% } %>
</div>