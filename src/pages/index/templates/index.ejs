<div>
  <img src="images/homebg.png" alt="" />
</div>

<% data.intro.forEach((item, index) => { %>
<div
  class="flex mt-14 mx-auto w-2/3<%= index === 1 ? ' flex-row-reverse' : '' %>"
>
  <div class="flex h-72 w-4/5<%= index === 1 ? ' flex-row-reverse' : '' %>">
    <div
      class="<%= index === 1 ? 'rounded-r-full pl-8' : 'rounded-l-full pr-8' %> intro-bg-gradient"
    >
      <div
        class="h-72 w-72 rounded-full bg-cover bg-center"
        style="
          box-shadow: 0.1rem 0.1rem 0.1rem 0.05rem rgba(0, 0, 0, 0.2);
          background-image: url('<%= item.description.image %>');
        "
      ></div>
    </div>
    <div
      class="flex-grow intro-bg-gradient <%= index === 1 ? 'pl-8' : 'pr-8' %>"
      style="<%= index === 1 ? 'border-radius: 3rem 0 0 3rem;' : 'border-radius: 0 3rem 3rem 0;' %>"
    >
      <p
        class="flex flex-col justify-center h-4/5 text-main-cadet-blue text-xl"
      >
        <%- include(item.description.content) %>
      </p>
      <p class="flex <%= index === 1 ? 'justify-end' : 'justify-start' %> items-center h-1/5 text-white text-md font-extralight">
        <span><%= item.description.duration %></span>
      </p>
    </div>
  </div>
  <div class="flex flex-grow items-center h-72 <%= index === 1 ? 'justify-start' : 'justify-end' %>">
    <a href="<%= item.link.href %> " target="_blank" rel="noopener noreferrer">
      <div
        class="flex items-center h-16 px-8 rounded-full border-4 border-white bg-main-light-blue-grey hover:bg-white text-main-cadet-blue text-3xl transition-colors"
      >
        <%= item.link.text %>
      </div>
    </a>
  </div>
</div>
<% }) %>
